{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true, // Setting "strict" to true as per the second object
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "commonjs", // Setting "module" to "commonjs" as per the second object
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".", // The base URL is set to the current directory
		"paths": {
			"@/*": [
				"./*"
			]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"context.d.ts",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"../build/types/**/*.ts",
		"dist/types/**/*.ts",
		"build/types/**/*.ts",
		"customImageLoader.js"
	],
	"exclude": [
		"node_modules"
	]
}